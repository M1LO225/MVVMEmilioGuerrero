<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MVVMEmilioGuerrero.ViewModels"  
             x:Class="MVVMEmilioGuerrero.CambioDivisas"
             Title="Cambio Divisas">
    
    <ContentPage.BindingContext>
        <local:CambioDivisasViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Image
            Source="https://m.media-amazon.com/images/I/61fuCpcIUWL._AC_UF350,350_QL80_.jpg"
            HeightRequest="250"
            WidthRequest="250"/>
        

        <Entry
            x:Name="EntryDolares"
            Text="{Binding ValorDolares}"
            Placeholder="Ingrese el valor en dolares"/>
        <Entry
            x:Name="EntryEuros"
            Text="{Binding ValorEuros}"
            Placeholder="Ingrese el valor en euros"/>

        <Image
            Source="https://img.freepik.com/foto-gratis/celebracion-dia-independencia-bandera-nacional-estados-unidos_23-2151448519.jpg"
            HeightRequest="250"
            WidthRequest="250"/>


    </VerticalStackLayout>
</ContentPage>